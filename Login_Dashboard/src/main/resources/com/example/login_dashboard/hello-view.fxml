<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" prefHeight="400.0" prefWidth="400.0"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.login_dashboard.HelloController">

    <children>
        <!-- Título -->
        <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <!-- Campo correo -->
        <TextField fx:id="txtCorreo" promptText="Correo electrónico" />

        <!-- Campo contraseña -->
        <PasswordField fx:id="txtPassword" promptText="Contraseña" />

        <!-- Botón ingresar -->
        <Button text="Ingresar" onAction="#handleLogin" />

        <!-- Label para errores -->
        <Label fx:id="lblError" textFill="red" />
    </children>
</VBox>